<tr>
  <td><%= show_user_orders.id %></td>
  <td><%= show_user_orders.created_at.to_date %></td>
  <td><%= currency_if_float(show_user_orders.value) %></td>

  <td <%= "class=text-danger" if show_user_orders.status == 'UNPLACED' %> >
    <%= show_user_orders.status %>
  </td>

  <td><%= link_to 'Show', '#' %></td>
  <td><%= link_to 'Edit', '#' %></td>
  <td><%= link_to 'Delete', '#',
            :method => :delete,
            :data => { :confirm => 'Delete order?' } %></td>
</tr>