<section id='order-new'>

  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <h1 class='text-center'>
        New Order for @user.name
      </h1>

    </div>
  </div>

  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <%= render :partial => 'order_form',
                 :locals => {
                             :user => @user,
                             :available_addresses => @available_addresses,
                             :available_cards => @available_cards,
                             :button_label => 'Create Order in Shopping Cart'
                            },
                 :layout => 'layouts/shared/show_panel' %>

    </div>
  </div>

</section>